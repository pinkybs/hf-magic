	{%else%} <span style="color: red;">{%$data.level%}级后可以赠送</span> {%/if%}</li>
	{% /foreach %}
</ul>
<div align="right" style="width:650px"><a href="javascript:void(0);" onclick="goPage(1);">上一页</a>&nbsp;<a href="javascript:void(0);" onclick="goPage(1);"> 1 </a>&nbsp;<a href="javascript:void(0);" onclick="goPage(2);"> 2 </a></div>
</div>

